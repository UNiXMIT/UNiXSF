{
  "name": "Salesforce Extension",
  "version": "3.0.2",
  "description": "Enhance Salesforce with new features.",
  "author": "Martin Turner",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "{23d40d0a-b0f9-4516-8c5c-ac5951d517b5}",
      "update_url": "https://raw.githubusercontent.com/UNiXMIT/UNiXSF/main/updates/FF/updates.json"
    }
  },
  "options_ui": {
    "page": "config/config.html",
    "open_in_tab": true,
    "browser_style": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite",
    "downloads",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://discord.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.lightning.force.com/*"
      ],
      "run_at": "document_end",
      "js": ["js/SFExt.js"],
      "css": ["css/style.css","css/all.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "*" ],
      "matches": [ "*://*.lightning.force.com/*" ]
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "action": {
    "default_icon": "icons/ot32.png",
    "default_title": "SFExt",
    "default_area": "navbar"
  },
  "icons": {
    "16": "icons/ot16.png",
    "32": "icons/ot32.png",
    "48": "icons/ot48.png",
    "128": "icons/ot128.png"
  }
}