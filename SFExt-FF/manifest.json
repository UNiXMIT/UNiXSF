{
  "name": "Salesforce Extension",
  "version": "2.9.8",
  "description": "Enhance Salesforce with new features.",
  "author": "Martin Turner",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "{23d40d0a-b0f9-4516-8c5c-ac5951d517b5}",
      "strict_min_version": "42.0"
    }
  },
  "options_page": "config/config.html",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite",
    "downloads",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.lightning.force.com/*"
      ],
      "run_at": "document_end",
      "js": ["js/SFExt.js"],
      "css": ["css/style.css","css/all.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "*" ],
      "matches": [ "*://*.lightning.force.com/*" ]
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "action": {
    "default_icon": "icons/ot32.png",
    "default_popup": "config/config.html"
  },
  "icons": {
    "16": "icons/ot16.png",
    "32": "icons/ot32.png",
    "48": "icons/ot48.png",
    "128": "icons/ot128.png"
  }
}